<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PrimerXamarin.Pages.FormModelo">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="*,2*" RowDefinitions="Auto, Auto, Auto, Auto">
                <Label Text="{Binding TituloForm}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalTextAlignment="Center" Style="{StaticResource EstiloLabel}"/>

                <Label Text="Nombre" Grid.Column="0" Grid.Row="1" VerticalOptions="Center"/>
                <Entry Grid.Column="1" Grid.Row="1" VerticalOptions="Center" Keyboard="Text"/>

                <Label Text="Direccion" Grid.Column="0" Grid.Row="2"/>
                <Entry Grid.Column="1" Grid.Row="2" Keyboard="Text"/>

                <StackLayout Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center" Orientation="Horizontal">
                    <Button Text="Aceptar" HorizontalOptions="Center" Style="{StaticResource BtnPrimary}"/>
                    <Button Text="Regresar" Clicked="Button_Clicked" HorizontalOptions="Center" Style="{StaticResource BtnSuccess}"/>
                </StackLayout>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

